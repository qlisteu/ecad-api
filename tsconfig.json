{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}